#include <stdio.h>
#include <math.h>

//VARIABLE DECLARATION
 int option;
 float a, b, c, answer;

//FUNCTION PROTOTYPE
float areatriangle(float x, float y);
float quadeqn(float x, float y, float z);

int main(){
	

 printf("1) CALCULATE AREA OF A TRIANGE\n");
 printf("2) CALCULATE THE QUADRATIC EQUATION\n");
 printf("3) CALCULATE AREA OF A RECTANGLE\n");
 printf("4) CALCULATE AREA OF A SPHERE\n");
 printf("5) Exit Program\n\n");
 printf("Please select an option: ");
scanf("%d", &option);



switch(option){


case 1:
printf("what is the height of the triangle: ");
   scanf("%f", &a);
printf("what is the base of the triangle: ");
   scanf("%f", &b);
answer = areatriangle(a, b);
 printf("the area of the triangle is: %f", answer);
break;


  case 2:
  printf("what is the coefficient of x^2: ");
        scanf("%f", &a);
  printf("what is the coefficient of the x: ");
        scanf("%f", &b);
  printf("what is the constant: ");
        scanf("%f", &c);
  answer = quadeqn(a, b, c);
  printf("the solution to the quadratic equation is x = %f ", answer); 
break;


case 5:
	return 0;
	break;
	
	
default:
	return 0;
	break;

      }

}
    

//FUNCTION DECLARATION

float areatriangle(float x, float y) {
float area = 0.5 * ( x * y);
   return area;
   }  

float quadeqn(float x, float y, float z) {
 float a, b, c, d, e, f;
    a = (y*y);
    b =   (4*x*z);
    c= a - b;
    d = sqrt(c); 
    e = (2*x);
    f = (a + d) /e;
    return f;

	//float eqn = ((y*y) + sqrt((y*y) - (4*x*z))) / (2*x);
	//   return eqn;
}

 
	






